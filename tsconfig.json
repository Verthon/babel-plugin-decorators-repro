{
  "compilerOptions": {
    "target": "es2022",
    "jsx": "react-jsx",
    "module": "preserve",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "types": ["node"]
  },
  "exclude": ["dist"]
}
